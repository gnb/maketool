prefix=		@prefix@
exec_prefix=	@exec_prefix@
BINDIR=		@bindir@
INSTALL=	@INSTALL@
PACKAGE=	@PACKAGE@
VERSION=	@VERSION@
localedir=	@datadir@/locale
datadir=	@datadir@/$(PACKAGE)
libexecdir=	@libexecdir@/$(PACKAGE)
helpdir=	$(prefix)/@DATADIRNAME@/$(PACKAGE)/help

CC=		@CC@
#CC=		gcc -Wall
CFLAGS=		@CFLAGS@
CPPFLAGS=	@GTK_CFLAGS@ -I. -Iicons -Iintl \
		-DLOCALEDIR=\"$(localedir)\" -DLIBEXECDIR=\"$(libexecdir)\" \
		-DHELPDIR=\"$(helpdir)\" -DDATADIR=\"$(datadir)\" \
		@CPPFLAGS@ $(TESTCPPFLAGS)
LDLIBS=		@GTK_LIBS@ @INTLLIBS@

SOURCES=	main.c filter.c help.c preferences.c log.c print.c ps.c \
		find.c autoconf.c ui.c task.c util.c glib_extra.c mqueue.c
HEADERS=	maketool.h filter.h common.h log.h ui.h \
		util.h glib_extra.h ps.h task.h mqueue.h
OBJECTS=	$(SOURCES:.c=.o)

top_srcdir=	.
top_builddir=	.
SUBDIRS=	icons intl po makesys #test
ifeq (@ENABLE_ONLINE_HELP@,yes)
SUBDIRS+=	doc
endif

###

ifneq ($(DEBUG),)
	CFLAGS= -g -Wall
	CPPFLAGS += -DDEBUG=$(DEBUG)
endif

# maketool program

all:: maketool

maketool: $(OBJECTS) _libintl
	$(_PURIFY) $(LINK.c) -o $@ $(OBJECTS) $(LDLIBS)
	
install:: $(BINDIR)/maketool

$(BINDIR)/maketool: maketool
	test -d $(@D) || $(INSTALL) -m 755 -d $(@D)
	$(INSTALL) -m 755 $< $@
	
uninstall::
	$(RM) $(BINDIR)/maketool
	
clean::
	$(RM) maketool *.o
		
###

# maketool_client program

all:: maketool_client

CLIENT_SOURCES=	client.c mqueue.c util.c
CLIENT_OBJECTS=	$(CLIENT_SOURCES:.c=.o)

maketool_client: $(CLIENT_OBJECTS) _libintl
	$(_PURIFY) $(LINK.c) -o $@ $(CLIENT_OBJECTS) $(LDLIBS)
	
install:: $(libexecdir)/maketool_client

$(libexecdir)/maketool_client: maketool_client
	test -d $(@D) || $(INSTALL) -m 755 -d $(@D)
	$(INSTALL) -m 755 $< $@
	
uninstall::
	$(RM) $(libexecdir)/maketool_client
	
clean::
	$(RM) maketool_client
		
###

# extract_targets shell script

install:: $(libexecdir)/extract_targets

$(libexecdir)/extract_targets: extract_targets
	test -d $(@D) || $(INSTALL) -m 755 -d $(@D)
	$(INSTALL) -m 755 $< $@
	
uninstall::
	$(RM) $(libexecdir)/extract_targets
	
###

# Assumes $PURIFY_HOME and $PUREOPTIONS are set in the environment
export PUREOPTIONS = -cache-dir=/home/gregoryb/.cache \
	-chain-length=20
PURIFY= purify

pure:
	$(MAKE) _PURIFY="$(PURIFY)" all
        
###

# Subdirectories

ifeq (@ENABLE_ONLINE_HELP@,no)
# Build an empty directory to keep RPM happy
install::
	$(INSTALL) -d $(helpdir)
endif


all install uninstall clean::
	+for subdir in $(SUBDIRS); do \
	  $(MAKE) -C $$subdir $@ || exit 1; \
	done

_libintl:
	$(MAKE) -C intl all
		
###

argstest:
	-$(RM) maketool main.o
	$(MAKE) TESTCPPFLAGS=-DARGSTEST=1 maketool
	awk -f argstest.awk < argstest.dat
	-$(RM) maketool main.o
	
	
###

# licence.c contains the COPYING file in C syntax. This
# avoids having to install the COPYING file on platforms
# other than Linux.
help.o: licence.c
licence.c: COPYING
	sed -e 's///g' -e 's/\\/\\\\/g' -e 's/"/\\"/g' -e 's/^\(.*\)$$/"\1\\n"/' <$< >$@

clean::
	$(RM) licence.c
	
###
# Some basic documentation (COPYRIGHT etc) used to be installed
# into /usr/doc at this point in the Makefile.  That's now
# handled by RPM -- see the %doc directive in maketool.spec.in

###
# Making a distribution
distdir=	$(PACKAGE)-$(VERSION)
DISTTAR=	$(PACKAGE)-$(VERSION)-src.tar.gz
DISTFILES=	\
		ABOUT-NLS COPYING COPYRIGHT TODO CHANGES maketool.spec.in \
		\
		configure.in config.guess config.sub install-sh \
		configure Makefile.in config.h.in mkinstalldirs \
		\
		$(SOURCES) $(HEADERS) \
		$(CLIENT_SOURCES) $(CLIENT_HEADERS) \
		extract_targets.in


dist:
	$(RM) -r $(distdir)
	mkdir $(distdir)
	chmod 777 $(distdir)
	for file in $(DISTFILES); do \
	  ln $$file $(distdir) 2>/dev/null || cp -p $$file $(distdir) 2>/dev/null; \
	done
	for subdir in $(SUBDIRS); do \
	  mkdir $(distdir)/$$subdir || exit 1; \
	  chmod 777 $(distdir)/$$subdir; \
	  $(MAKE) -C $$subdir $@ || exit 1; \
	done
	tar chozf $(DISTTAR) $(distdir)
	$(RM) -r $(distdir)


RPMFLAGS=	--define "_sourcedir $$PWD" \
		--define "_builddir $$PWD/BUILD" \
		--define "_rpmdir $$PWD" \
		--define "_srcrpmdir $$PWD"
rpm: dist
	-$(RM) -r BUILD
	mkdir BUILD
	rpm $(RPMFLAGS) -ba --clean maketool.spec
		
