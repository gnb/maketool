top_builddir=	..
prefix=		@prefix@
PACKAGE=	@PACKAGE@
VERSION=	@VERSION@

CPPFLAGS=	@GTK_CFLAGS@

SOURCES=	gtkctree.c
HEADERS=	gtkctree.h
OBJECTS=	$(SOURCES:.c=.o)

###

all:: $(OBJECTS)

# Just too much wrong in GTK source to fix, so disable -pedantic
gtkctree.o:	gtkctree.c
	$(CC) $(CPPFLAGS) `echo $(CFLAGS) | sed -e 's|-pedantic||g'` -c $<

clean::
	$(RM) *.o

maintainer-clean distclean::

install uninstall::
	@echo "Nothing to $@ here"
	
###

# Making a distribution
distdir=	$(top_builddir)/$(PACKAGE)-$(VERSION)/lib/gtk2/gtk
DISTFILES=	Makefile.in $(SOURCES) $(HEADERS)

dist:
	for file in $(DISTFILES); do \
	  ln $$file $(distdir) 2>/dev/null || cp -p $$file $(distdir) 2>/dev/null; \
	done
	for subdir in $(SUBDIRS); do \
	  mkdir $(distdir)/$$subdir || exit 1; \
	  chmod 777 $(distdir)/$$subdir; \
	  ( cd $$subdir ; $(MAKE) $@ ) || exit 1; \
	done
	
