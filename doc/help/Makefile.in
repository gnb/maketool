prefix=		@prefix@
PACKAGE=	@PACKAGE@
VERSION=	@VERSION@
ALL_LINGUAS=	@ALL_LINGUAS@
helpdir=	$(prefix)/@DATADIRNAME@/$(PACKAGE)/help
INSTALL=	@INSTALL@

INSTALLABLES=	$(foreach d,C $(ALL_LINGUAS),$(shell find $d -name '*.gif' -o -name '*.html'))
INSTALLED=	$(addprefix $(helpdir)/,$(INSTALLABLES))

###

all::

clean::
		
install:: $(INSTALLED)

$(helpdir)/%: %
	test -d $(@D) || $(INSTALL) -d -m 755 $(@D)
	$(INSTALL) -m 644 $< $@

define _remove_one
-$(RM) $f

endef

uninstall::
	$(foreach f,$(INSTALLED),$(_remove_one))
		
###

# Making a distribution
distdir=	../../$(PACKAGE)-$(VERSION)/doc/help
DISTFILES=	Makefile.in $(INSTALLABLES)

dist:
	for file in $(DISTFILES); do \
	  ln $$file $(distdir) 2>/dev/null || cp -p $$file $(distdir) 2>/dev/null; \
	done
	
