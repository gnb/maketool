PACKAGE=	@PACKAGE@
VERSION=	@VERSION@
SUBDIRS=	C @ALL_LINGUAS@

top_builddir=	../..


###

all clean install uninstall::
	for subdir in $(SUBDIRS) ; do \
	  test -d $$subdir || continue ;\
	  ( cd $$subdir ; $(MAKE) $@ ) || exit 1 ;\
	done
		
###

# Making a distribution
distdir=	$(top_builddir)/$(PACKAGE)-$(VERSION)/doc/help
DISTFILES=	Makefile.in help-common.mk.in help.dsl entities.sgml.in

dist:
	for file in $(DISTFILES); do \
	  ln $$file $(distdir) 2>/dev/null || cp -p $$file $(distdir) 2>/dev/null; \
	done
	for subdir in $(SUBDIRS); do \
	  test -d $$subdir || continue; \
	  mkdir $(distdir)/$$subdir || exit 1; \
	  chmod 777 $(distdir)/$$subdir; \
	  ( cd $$subdir ; $(MAKE) $@ ) || exit 1 ;\
	done
	
