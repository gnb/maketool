TOPDIR=		../../..
prefix=		@prefix@
PACKAGE=	@PACKAGE@
VERSION=	@VERSION@
LANG=		$(notdir $(shell pwd))
helpdir=	$(prefix)/@DATADIRNAME@/$(PACKAGE)/help/$(LANG)
INSTALL=	@INSTALL@
SGMLDIR=	/usr/local/share/sgml
JADE=		jade
NSGMLS=		nsgmls
HTML_MANIFEST=	HTML.manifest
HTML_FILES=	$(shell cat $(HTML_MANIFEST))
IMAGES=		$(wildcard *.gif)
INSTALLABLES=	$(HTML_FILES) $(IMAGES)

###

# all
all:: maketool.html

maketool.html: help.sgml
	$(JADE) -t sgml -i html -d ../help.dsl $(SGMLDIR)/style/dsssl/docbook/docbook.dcl help.sgml

# install
define _install_one
$(INSTALL) -m 644 $f $(helpdir)

endef

install::
	test -d $(helpdir) || $(INSTALL) -d -m 755 $(helpdir)
	$(foreach f,$(INSTALLABLES),$(_install_one))

# check
define _checkhtml_one
-$(NSGMLS) -sv $(SGMLDIR)/jade/pubtext/HTML4.dcl $f

endef
	
checkhtml:
	$(foreach f,$(HTML_FILES),$(_checkhtml_one))
	
#clean
clean::
	-$(RM) $(HTML_FILES) $(HTML_MANIFEST)

#uninstall
define _remove_one
-$(RM) $(helpdir)/$f

endef

uninstall::
	$(foreach f,$(INSTALLABLES),$(_remove_one))
		
###

# Making a distribution
distdir=	$(TOPDIR)/$(PACKAGE)-$(VERSION)/doc/help/$(LANG)
DISTFILES=	Makefile.in help.sgml $(INSTALLABLES) $(HTML_MANIFEST)

dist:
	for file in $(DISTFILES); do \
	  ln $$file $(distdir) 2>/dev/null || cp -p $$file $(distdir) 2>/dev/null; \
	done
	
