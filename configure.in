AC_INIT(main.c)
sinclude(/usr/share/aclocal/gettext.m4)dnl
sinclude(lcmessage.m4)dnl
sinclude(progtest.m4)dnl
sinclude(gtk.m4)dnl
AC_CONFIG_HEADER(config.h)

PACKAGE=maketool
VERSION=0.1

dnl Checks for programs.
AC_PROG_INSTALL
AC_PROG_AWK
AC_PROG_CC

dnl Stuff for gettext
ALL_LINGUAS="la"
AM_GNU_GETTEXT

dnl Checks for libraries.

dnl Checks for header files.
AC_HEADER_STDC
AC_HEADER_SYS_WAIT
AC_CHECK_HEADERS(malloc.h sys/ioctl.h sys/time.h unistd.h memory.h signal.h)

dnl Checks for typedefs, structures, and compiler characteristics.
AC_C_CONST
AC_TYPE_PID_T

dnl Checks for library functions.
AC_PROG_GCC_TRADITIONAL
AC_TYPE_SIGNAL
AC_FUNC_WAIT3
AC_CHECK_FUNCS(putenv regcomp strchr)

dnl GTK
AM_PATH_GTK(1.2.0)

AC_DEFINE_UNQUOTED(PACKAGE, "$PACKAGE")
AC_DEFINE_UNQUOTED(VERSION, "$VERSION")
AC_SUBST(PACKAGE)
AC_SUBST(VERSION)
AC_OUTPUT(Makefile intl/Makefile po/Makefile.in icons/Makefile)
